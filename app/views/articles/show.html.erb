<div class="article">
  <div class="container">
    <p class="date"><%= @article.created_at.strftime('%b %d') %></p>
    <h2><%= @article.title %></h2>
    <p class="author">by <%= @article.author %></p>
    <p class="article_content"><%= @article.body %></p>

   <% if current_user && current_user.author? %> 
   <p>
    <%= link_to "Edit", edit_article_path(@article.id) %> 
    <%= link_to "Delete", articles_path(@article.id), method: "delete" %> 
  </p>
  <% end %> 
    
  </div>
</div>